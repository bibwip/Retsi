<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        android:icon="@drawable/ic_language"
        app:defaultValue="Nederlands"
        app:entries="@array/talen"
        app:entryValues="@array/talen"
        app:key="taal"
        app:title="@string/kies_taal"
        app:useSimpleSummaryProvider="true" />

    <Preference
        android:icon="@drawable/ic_edit"
        android:key="vakken"
        android:title="@string/bewerk_vakken" />

    <ListPreference
        android:entries="@array/themes"
        app:defaultValue="Systeem"
        android:entryValues="@array/themes_keys"
        android:icon="@drawable/ic_dark_mode"
        android:key="dark_key"
        android:title="Theme"
        app:useSimpleSummaryProvider="true" />

</PreferenceScreen>